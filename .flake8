# max-line-length and extend-ignore are for compatibility with Black:
# https://black.readthedocs.io/en/stable/guides/using_black_with_other_tools.html#id2
[flake8]
max-line-length = 88
# D is for docstrings https://www.pydocstyle.org/en/2.1.1/error_codes.html
# DCO is for docstrings-complete https://pypi.org/project/flake8-docstrings-complete/
# DOC is for doclint https://jsh9.github.io/pydoclint/violation_codes.html

extend-ignore = E203, E704, D1, D2, D3, D4, DCO01, DCO020, DCO030, DCO040, DCO050, DCO051, DCO060, DOC301
exclude = .git,__pycache__,venv
